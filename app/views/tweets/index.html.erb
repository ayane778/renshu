<h1>GeekTwitter</h1>
<%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>
<%= link_to "営業カレンダー", posts_path %>

<h3>投稿を検索</h3>
 <%= form_tag({controller:"tweets",action:"index"}, method: :get) do %> <%#フォームタグを生成するためのもの%>
   <%= text_field_tag :search %>
   <%= submit_tag '検索する'  %>
<% end %>
<h3>Tweet一覧</h3>
<%= link_to "新規投稿へ", new_tweet_path %>
<%= page_entries_info @tweets %>
<%= paginate @tweets %>
<div class="tweets-container">
  <% @tweets.each do |t| %>
  
           <% if t.user.image.attached? %>
     <%= image_tag  t.user.image, size: '100x50'%>
  <% end %>
     <% if t.image.attached? %>
            <%= image_tag t.image, size: '250x200'%>
        <% end %>

    <div class="tweet">
       <%= link_to t.user.name, user_path(t.user.id) %>
       <%= t.user.email %>
      <%= t.body %>
      <%= t.created_at %>

 <% if user_signed_in? %>
      <% if current_user.already_liked?(t) %>
          <%= link_to tweet_like_path(id: t.id, tweet_id: t.id), method: :delete do %>
              <p>いいねを取り消す</p><%= t.likes.count %>
          <% end %>
      <% else %>
          <%= link_to tweet_likes_path(id: t.id, tweet_id: t.id), method: :post do %>
              <p>いいね</p><%= t.likes.count %>
          <% end %>
      <% end %>
  <% else %>
      <p>いいねの数 = </p><%= t.likes.count %>
  <% end %>

       <%= link_to "詳細へ", tweet_path(t.id) %>
        <% if user_signed_in? && current_user.id == t.user_id %>
      <%= link_to "編集する", edit_tweet_path(t.id) %>
      <%= link_to "削除する", tweet_path(t.id), method: :delete %>
    <% end %> 
    <% if user_signed_in? %>
  <%= link_to "マイページへ", user_path(current_user.id) %>
<% end %>
    </div>
  <% end %>
</div>

<%= form_tag({controller:"tweets",action:"index"}, method: :get) do %>
    <% Tag.all.each do |t| %>
        <li><%= check_box :tag_ids, t.name %><%= t.name %></li>
    <% end %>
    <%= submit_tag '検索' %>
<% end %>

<%= form_tag({controller:"tweets",action:"index"}, method: :get) do %>
    <%= text_field_tag :tag %>
    <%= submit_tag 'タグを追加' %>
<% end %>


<div id='map'></div>

<style>
#map {
  height: 600px;
  width: 100%;
}
</style>

<!-- js部分 -->
<script>
    function initMap() {

      //初期表示位置
      let latlng = new google.maps.LatLng(38.60, 139.5);
      //デザイン
      let styles = [
           {
            stylers: [
             { "saturation": 0 },
             { "lightness": 0 }
            ]
           }
          ];

      let map = new google.maps.Map(document.getElementById('map'), {
          zoom: 5.5,
          styles: styles,
          center: latlng
      });
      let transitLayer = new google.maps.TransitLayer();
      transitLayer.setMap(map);

//複数マーカー ここから
      <% @tweets.each do |tweet|%>
        ( function() { 
          let markerLatLng = { lat: <%= tweet.lat %>, lng: <%= tweet.lng %> }; // 緯度経度のデータ作成
          let marker = new google.maps.Marker({ 
            position: markerLatLng, 
            map: map 
          });
//マーカーをクリックしたとき、詳細情報を表示
          let infowindow = new google.maps.InfoWindow({
            position: markerLatLng,
            content: "<a href='<%= tweet_url(tweet.id) %>' target='_blank'><%= tweet.body %></a>"
          }); //ここで詳細ページへのリンクを表示させる
          marker.addListener('click', function() {
            infowindow.open(map, marker);
          });

       })();
      <% end %>
      //複数マーカー ここまで  
  }
</script>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDCp8cPMyLAOdlpJQ6PQSfoJOCeFbV1fIo&callback=initMap" async defer></script>